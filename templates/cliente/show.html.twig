{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% block title %}Cliente{% endblock %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cliente.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ cliente.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ cliente.apellido }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ cliente.correo }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ cliente.telefono }}</td>
            </tr>
            <tr>
                <th>Celular</th>
                <td>{{ cliente.celular }}</td>
            </tr>
            <tr>
                <th>Domicilio</th>
                <td>{{ cliente.domicilio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cliente_index') }}" class="btn btn-secondary btn-sm">Volver</a>

    <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}" class="btn btn-primary btn-sm">Editar</a>

    {{ include('cliente/_delete_form.html.twig') }}
{% endblock %}
