{% extends 'base.html.twig' %}

{% block body %}

<h1>{% block title %}Productos{% endblock %}</h1>

{% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger" role="alert">
        {{ message }}
    </div>
{% endfor %}

<a href="{{ path('app_producto_create') }}" class="btn btn-success mb-3">Crear nuevo producto</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Código</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion ? producto.descripcion : 'Sin descripción' }}</td>
                <td>{{ producto.codigo }}</td>
                <td>{{ producto.categoria ? producto.categoria.nombre : 'Sin categoría' }}</td>
                <td>
                    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                    <form method="post" action="{{ path('app_producto_delete', {'id': producto.id}) }}" style="display:inline-block;" onsubmit="return confirm('¿Está seguro de que desea eliminar este producto?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.id) }}">
                        <button class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay productos registrados.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
