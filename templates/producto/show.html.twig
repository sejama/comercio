{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% block title %}Producto{% endblock %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Código</th>
                <td>{{ producto.codigo }}</td>
            </tr>
            <tr>
                <th>Categoría</th>
                <td>{{ producto.categoria.nombre }}</td>
            </tr>
            <tr>
                <th>Precio Actual</th>
                <td>$ {{ producto.precioActual }}</td>
            </tr>
        </tbody>
    </table>
    <p>Historial de precios</p>
    <table class="table">
        <thead>
            <tr>
                <th>Fecha Desde</th>
                <th>Fecha Hasta</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {% for precio in producto.precioHistoricos %}
                <tr>
                    <td>{{ precio.getFechaDesde|date('d/m/Y H:i:s') }}</td>
                    <td>{% if precio.getFechaHasta %}{{ precio.getFechaHasta|date('d/m/Y H:i:s') }}{% else %}Actual{% endif %}</td>
                    <td>$ {{ precio.precio }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_producto_index') }}" class="btn btn-secondary btn-sm">Volver</a>

    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-primary btn-sm">Editar</a>

    {{ include('producto/_delete_form.html.twig') }}
{% endblock %}
