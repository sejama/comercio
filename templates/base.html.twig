<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/bootstrap-5.3.8-dist/css/bootstrap.min.css') }}" >
        
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col">
                    <a class="navbar-brand" href="#">
                        <img src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="Bootstrap" width="24" height="24">
                    </a>
                </div>
                <div class="col-10">
                    {{ include('header.html.twig') }}
                    {% block body %}  {% endblock %}
                    {{ include('footer.html.twig') }}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('assets/bootstrap-5.3.8-dist/js/bootstrap.bundle.min.js') }}"></script>
        {% endblock %}   
    </body>
</html>
